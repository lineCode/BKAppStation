<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_dlbar_bg"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#fff1ba">
    <FrameLayout
        android:id="@+id/fl_dlbar_progress"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#fde179"/>
    <ImageView
        android:id="@+id/img_dlbar_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/i_download_top"/>

    <TextView
        android:id="@+id/tv_dlbar_pg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="15dp"
        android:textColor="#ff8a02"
        android:gravity="center"/>
</FrameLayout>